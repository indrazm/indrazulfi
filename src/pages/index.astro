const links = [
  { url: "https://twitter.com/indrazulfi", title: "twitter.com/indrazulfi" },
  { url: "https://github.com/indrazm", title: "github.com/indrazm" },
];
---

<Layout title="Hello, Indra here!">
  <section class="flex md:mt-20 mt-6">
    <div class="w-2/3 space-y-4">
      <h1 class="text-5xl font-bold">Hello! ðŸ‘‹</h1>
      <p class="mr-10">
